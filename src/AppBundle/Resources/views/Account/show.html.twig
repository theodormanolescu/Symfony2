    {% extends 'common/app.html.twig' %}

    {% block header%}
    <h1>Account</h1>
    {% endblock %}

    {% block content%}

    <table class="record_properties">
        <tbody>            <tr>
                <th>Id</th>                <td>
                    {{ entity.id }}
                </td>            </tr>            <tr>
                <th>Login</th>                <td>
                    {{ entity.login }}
                </td>            </tr>            <tr>
                <th>Password</th>                <td>
                    {{ entity.password }}
                </td>            </tr>            <tr>
                <th>Email</th>                <td>
                    {{ entity.email }}
                </td>            </tr>            <tr>
                <th>Active</th>                <td>
                    {{ entity.active }}
                </td>            </tr>        </tbody>
    </table>

        <div class="record-actions">
    <a class="button" href="{{ path('account') }}">
        Back to the list
    </a>
            <a class="button" href="{{ path('account_edit', 
            { 'id': entity.id }) }}">
            Edit
        </a>
                <div style="float:left">
        {{ form(delete_form) }}
        </div>
        <div style="clear:both"></div>
    </div>
    {% endblock %}
