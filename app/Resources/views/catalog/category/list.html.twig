{% extends 'common/app.html.twig' %}
{% block header %} Categories {% endblock %}
{% block content %}
<div id="modal"></div>
    <table border="1">
        <tr>
            <th>#</th><th>Category</th><th colspan="2">Actions</th>
        </tr>
        {% for category in categories %}
            {% set showUrl = path(
            'catalog_category_show',
            {'categoryId': category.id})
            %}
            {% set editUrl = path(
            'catalog_category_edit',
            {'categoryId': category.id})
            %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.label }}</td>
                <td><a href="{{ showUrl }}">Show</a></td>
                <td><a class="editLink" href="#" onclick="cagetoryModal('{{ editUrl }}')">Edit</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}

